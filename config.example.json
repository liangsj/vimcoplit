{
  "server": {
    "host": "localhost",
    "port": 8080
  },
  "model": {
    "type": "claude-3-sonnet-20240229",
    "api_key": "your-api-key-here",
    "max_tokens": 4096,
    "temperature": 0.7
  },
  "log": {
    "level": "info",
    "file": "vimcoplit.log",
    "max_size": 100,
    "max_backups": 3,
    "max_age": 7
  },
  "file": {
    "max_file_size": 10485760,
    "allowed_exts": [".go", ".lua", ".md", ".txt"]
  },
  "command": {
    "timeout": 30,
    "allowed_cmds": ["git", "go", "nvim"]
  }
} 